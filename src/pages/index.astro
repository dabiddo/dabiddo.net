---
import Layout from "../layouts/BiosLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import AsciiHeader from "../components/AsciiHeader.astro"; // Assuming you made this

const posts = (await getCollection("blog")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const postsPerPage = 15;
const totalPages = Math.ceil(posts.length / postsPerPage);
const currentPage = 1;
const currentPosts = posts.slice(0, postsPerPage);
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
    <main class="terminal-body">
        <h3 class="section-title">[ LATEST_LOG_ENTRIES ]</h3>
        
        <ul class="post-list">
            {
                currentPosts.map((post, idx) => (
                    <li>
                        <a href={`/blog/${post.id}/`} class="post-row">
                            <span class="post-index">{(idx + 1).toString().padStart(2, '0')}.</span>
                            <span class="post-title">{post.data.title.toUpperCase().replace(/\s+/g, '_')}</span>
                            <span class="post-spacer"></span>
                            <span class="post-date">
                                <FormattedDate date={post.data.pubDate} />
                            </span>
                        </a>
                    </li>
                ))
            }
        </ul>

        <nav class="pagination">
            <span>PAGE {currentPage} OF {totalPages}</span>
            {totalPages > 1 && <a href="/page/2" class="nav-btn">NEXT_PAGE_>></a>}
        </nav>
    </main>
</Layout>
